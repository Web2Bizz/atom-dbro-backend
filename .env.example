########################################
# Application
########################################

# HTTP порт бэкенда
PORT=3000

# Node окружение: development | production
NODE_ENV=development

# Разрешённые CORS-источники (через запятую)
# Пример: http://localhost:5173,https://yourdomain.com
# Если не указано — используются дефолтные localhost-значения
CORS_ORIGINS=


########################################
# Database (PostgreSQL + Drizzle)
########################################

# Основной connection string для приложения и drizzle
# В docker-compose обычно указывает на сервис postgres
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/atom_dbro

# Если разворачиваете БД локально без Docker:
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/atom_dbro

# (Опционально, для docker-compose)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=atom_dbro
POSTGRES_PORT=5432


########################################
# JWT / Auth
########################################

# Секрет для access-токенов
JWT_SECRET=change-me-in-production

# Время жизни access-токена
JWT_EXPIRES_IN=24h

# Секрет для refresh-токенов (может совпадать с JWT_SECRET, но лучше отдельный)
JWT_REFRESH_SECRET=change-me-refresh-in-production

# Время жизни refresh-токена
JWT_REFRESH_EXPIRES_IN=7d

# TTL токена восстановления пароля (секунды)
FORGOT_PASSWORD_TOKEN_TTL=3600

# Базовый URL фронтенда для формирования ссылок в письмах
FRONTEND_URL=http://localhost:5173


########################################
# Redis
########################################

# Хост Redis
REDIS_HOST=redis

# Порт Redis
REDIS_PORT=6379

# Пароль Redis (если не используется — оставить пустым)
REDIS_PASSWORD=

# Номер базы Redis
REDIS_DB=0


########################################
# RabbitMQ (опционально)
########################################

# Полный URL подключения (если указан, имеет приоритет)
# Пример: amqp://user:password@rabbitmq:5672
RABBITMQ_URL=

# Либо по отдельным полям:
RABBITMQ_HOSTNAME=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=guest


########################################
# S3 / Object Storage (ОБЯЗАТЕЛЬНО)
########################################

# Имя бакета
S3_BUCKET_NAME=your-bucket-name

# Ключи доступа (либо S3_*, либо AWS_* — используются оба варианта)
S3_ACCESS_KEY_ID=your-access-key-id
S3_SECRET_ACCESS_KEY=your-secret-access-key

# Альтернативные имена (если хотите использовать AWS_*):
# AWS_ACCESS_KEY_ID=your-access-key-id
# AWS_SECRET_ACCESS_KEY=your-secret-access-key

# Регион
S3_REGION=us-east-1
# AWS_REGION=us-east-1

# Кастомный endpoint для нестандартных провайдеров (опционально)
# Например: https://s3.ru1.storage.beget.cloud
S3_ENDPOINT=

# Шаблон для публичных URL (опционально)
# Пример: https://{bucket}.s3.{region}.amazonaws.com/{key}
S3_PUBLIC_URL_TEMPLATE=

# Использовать path-style URL (обычно true для кастомных endpoint)
S3_FORCE_PATH_STYLE=true


########################################
# Avatar generation service (опционально)
########################################

# Базовый URL API генератора аватарок (для запросов)
AVAGEN_BASE_URL=http://82.202.140.37:12745

# Базовый URL, который сохраняется в БД (если не задан, используется AVAGEN_BASE_URL)
AVAGEN_SOURCE_URL=https://it-hackathon-team05.mephi.ru/files


########################################
# Scripts / Utilities (локальный запуск)
########################################

# Используется в src/scripts/import-organizations.ts
API_BASE_URL=http://localhost:3000
API_EMAIL=admin@example.com
API_PASSWORD=admin-password
JSON_FILE_PATH=mock/organizations.json